# ===========================================
# Kocruit AI Agent - LangGraph 기반
# 환경 변수 설정 예시 파일
# ===========================================

# ===========================================
# AI API 키
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# ===========================================
# Redis 설정
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# ===========================================
# ChromaDB 설정 (벡터 데이터베이스)
# ===========================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=kocruit_documents

# ===========================================
# 데이터베이스 설정 (MySQL) - 선택사항
# ===========================================
DB_HOST=localhost
DB_PORT=3307
DB_NAME=kocruit_db
DB_USER=myuser
DB_PASSWORD=1234

# ===========================================
# AI 모델 설정
# ===========================================
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ===========================================
# 캐싱 설정
# ===========================================
CACHE_TTL=3600
ENABLE_LLM_CACHE=true

# ===========================================
# 개발 환경 설정
# ===========================================
DEBUG=true
LOG_LEVEL=INFO
VERBOSE_LOGGING=false
